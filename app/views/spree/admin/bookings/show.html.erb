<h1>Bookings</h1>
<br>
<div id="calendar">

  <h2 id="month">
    <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m") %>
    <%=h @date.strftime("%B %Y") %>
    <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m") %>
  </h2>
<%= calendar_for(@bookings,:year => @date.year, :month => @date.month) do |t| %>
  <%= t.head('mon', 'tue', 'wed', 'thu', 'fri', 'sat', 'sun') %>
  <%= t.day(:day_method => :booking_date) do |date, this_day_bookings| %>
    <%= date.day %><br>
    <% @buses.each do |bus|%>
      <% tour_name = '' %>
      <% seats_left = bus.seats %>
      <% this_day_bookings.each do |booking| %>
        <% if booking.bus == bus %>
          <% tour_name = booking.variant.product.name %>
          <% seats_left = seats_left - booking.adults - booking.children %>
        <% end %>
      <% end %>
      <% if tour_name != '' %>
        <span id="calendar-booking" >
        <%= h("#{tour_name} Seats: " + seats_left.to_s ) %>
        </span>
      <% end %>

    <% end %>
  <% end %>
<% end %>
</div>
<br>

<h2>Bookings List</h2>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th style="width:65%">Tour</th>
      <th style="width:10%">Bus</th>
      <th style="width:20%">Booking Date</th>
      <th style="width:5%">Adults</th>
      <th style="width:5%">Children</th>
      <th style="width:5%">Under 4s</th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr onclick="location.href='<%= edit_admin_order_path(booking.order) %>'">
        <td><%= booking.variant.product.name %></td>
        <td><%= booking.bus.name %></td>
        <td><%= booking.booking_date.to_s %></td>
        <td><%= booking.adults %></td>
        <td><%= booking.children %></td>
        <td><%= booking.under4 %></td>
      </tr>
    <% end %>
  </tbody>
</table>
